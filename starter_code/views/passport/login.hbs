{{#if error}}
    <h1 style="color:red">{{error}}</h1>
{{else}}
  LogIn
{{/if}}
    
<form action="/login" method="POST">
    <p>
        Username:
        <input name="username" type="text">
    </p>
    <p>
        Password:
        <input name="password" type="password">
    </p>

    <input type="Submit">
</form>
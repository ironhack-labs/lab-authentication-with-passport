<h1>{{title}}</h1>
{{#if user}}
    <p>Welcome, {{user.username}}</p>
    <a href="/passport/logout" class="btn btn-default">Logout</a>
    <a href="/passport/private-page" class="btn btn-info">Main</a>
{{else}}
    <h2>You are not logged in!</h2>
    <a href="/passport/signup" class="btn btn-default">Signup</a>
    <a href="/passport/login" class="btn btn-default">Login</a>
{{/if}}
<h2> Log In </h2>

<% if(typeof errorMessage !== "undefined") { %>
  <p class="error-message">
  <%= errorMessage %>
  </p>
<% } %>


<form id="form" method="post" action="/process-login">
  <label for="username-input"> Username </label>
  <input id="username-input" type="username" placeholder="e.g. tyrionTheRock"
    name="loginUser">
  <br />

  <label for="password-input"> Password </label>
  <input id="password-input" type="password" placeholder="e.g. winewinewine"
    name="loginPassword" />
  <br />

  <button> Log In </button>
</form>

<p>
  Don't you have an account?
  <a href="/signup"> Sign Up </a>
</p>

<h1>Login</h1>
<form method="post" action="/login">
	<label>Username</label>
	<input type="text" name="username">
	<br>
	<label>Password</label>
	<input type="password" name="password">
	<br>
	<div>
		<% if (message) { %>
    <div class="error-message"><%= message %></div>
    	<% } %>
	</div>
	<button type="submit">Log In</button>
</form>
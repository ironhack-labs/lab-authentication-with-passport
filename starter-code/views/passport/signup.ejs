<h2> Sign Up </h2>

<% if (typeof errorMessage !== "undefined") { %>
  <p class="error-message"> <%= errorMessage %> </p>
<% } %>

<form id="form" method="post" action="/process-signup">

  <label for="username-input"> Username </label>
  <input id="username-input" type="text" placeholder="e.g. alexnwnderland" name="signupUsername" />
  <br />

  <label for="password-input"> Password </label>
  <input id="password-input" type="password" placeholder="e.g. ygritte" name="signupPassword" />
  <br />

  <button> Sign Me Up! </button>
</form>

<p> Already have an account?
  <a href="/login"> Log In! </a>
</p>

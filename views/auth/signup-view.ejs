
<div class="col-md-2"></div>
<div class="col-md-8 login-wrapper">
<form method="post" action="/signup" >
  <h3> Sign Up to RAWVOX </h3>

  <% if (typeof errorMessage !== "undefined") { %>
    <div class="error col-md-7"> <%= errorMessage %> </div>
  <% } %>
  <i class="fa fa-arrow-left" aria-hidden="true"><a href="/">&nbsp back to rawbox</a></i>
  <div class="form-group">
  <label for="name-input"> Your Name </label>
  <input  id="name-input" type="text" name="signupName" class="form-control" maxlength='15' required>
  </div>
  <br>
  <div class="form-group">
  <label for="username-input"> Your Username </label>
  <input  id="username-input" type="text" name="signupUsername" class="form-control" minlength=5 maxlength='15' required>
  <br>
  </div>

  <div class="form-group">
  <label for="password-input"> Password </label>
  <input  id="password-input" type="password" name="signupPassword" class="form-control" minlength=5 required>
  </div>
  <br>

  <button type="button submit" class="btn btn-default"> Sign Up </button>
</form>
<hr>

  <a href="/auth/google">
  <div class="google">
  <center><i class="fa fa-google"> | Sign Up with Google</i></center>
  </div></a>
  <a href="/auth/facebook">
  <div class="face">
  <center><i class="fa fa-facebook"> | Sign Up with Facebook</i></center>
</div></a>

<p>
  Do you already have an account?
  <a href="/login"> Log In </a>
</p>
</div>

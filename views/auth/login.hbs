<form method="POST" action="/login">

    <div class="form-group">
        <label for="fill1">Username</label>
        <input type="text" class="form-control" id="fill1" name="username">
    </div>
    <div class="form-group">
        <label for="fill2">Password</label>
        <input type="password" class="form-control" id="fill2" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>

    {{#if errorMsg}}
    <div id="errorMsg">
        {{{errorMsg}}}
    </div>
    {{/if}}

</form>
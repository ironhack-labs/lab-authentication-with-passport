<form action="/login" method="POST">
    <div class="form-row justify-content-center pt-3">
        <div class="form-group col-7 m-2">
            <label for="username">Username</label>
            <input class="form-control text-secondary" type="text" name="username" placeholder="Your name">
        </div>
        <div class="form-group col-7 m-2">
            <label for="password">Password</label>
            <input class="form-control text-secondary" type="password" name="password" placeholder="Your password">
        </div>
        {{#if message}}
        <p class="col-7 m-2" style="color: red">{{ message }}</p>
        {{/if}}
        <button class="btn btn-outline-primary col-7 m-2">Login</button>
    </div>
</form>
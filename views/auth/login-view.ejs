<div class="col-md-2"></div>
<div class="col-md-8 login-wrapper">
  <% if (errorMessage.length > 0 ) { %>
    <div class="error col-md-12 row"> <%= errorMessage %> </div>
  <% } %>
<form method="post" action="/login">
  <div class="form-group">
    <h3> Login </h3>
    <div class="row">
    <i class="fa fa-arrow-left" aria-hidden="true"><a href="/">&nbsp back to rawbox</a></i><br>
    </div>
  <label for="username-input"> Your Username </label>
  <input  id="username-input" type="text" name="loginUsername" class="form-control" required>
  <br>
  </div>

  <div class="form-group">
  <label for="password-input"> Password </label>
  <input  id="password-input" type="password" name="loginPassword" class="form-control" required>
  </div>
  <br>

  <button type="button submit" class="btn btn-default"> Login </button>

  </form>

  <a href="/auth/google">
  <div class="google">
  <center><i class="fa fa-google"> | Sign In with Google</i></center>
  </div></a>
  <a href="/auth/facebook">
  <div class="face">
  <center><i class="fa fa-facebook"> | Sign In with Facebook</i></center>
</div></a>

<p>
  Don't have an account?
  <a href="/signup"> Sign Up </a>
</p>
</div>

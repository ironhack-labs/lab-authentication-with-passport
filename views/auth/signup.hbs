<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Registro de usuario</h1>

            <form action="/signup" method="POST">
                <div class='form-group'>
                    <label for='username'>Nombre de usuario</label>
                    <input name='username' type='text' class='form-control' placeholder='nombre de usuario'
                        id='username'>
                </div>
                <div class='form-group'>
                    <label for='password'>Contrase√±a</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>
                <button type='submit' class='btn btn-outline-info btn-block'>Registrarse</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px; background:rgba(233, 69, 69, .8); color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>

        </div>
    </div>
</div>